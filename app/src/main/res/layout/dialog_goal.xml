<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20sp">

        <!-- Title -->
        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Goal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingBottom="16dp"/>

        <!-- Goal name -->
        <TextView
            android:text="Goal Name"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edit_goal_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter goal name"
            android:layout_marginBottom="16dp"/>

        <!-- NFC assign section -->
        <TextView
            android:text="NFC Tag"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:id="@+id/nfc_section"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="6dp"
            android:paddingBottom="6dp">

            <TextView
                android:id="@+id/nfc_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="No tag assigned"
                android:textSize="14sp" />

            <Button
                android:id="@+id/assign_nfc_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assign" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
