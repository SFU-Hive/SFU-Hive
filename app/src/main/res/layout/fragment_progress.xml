<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id = "@+id/badges_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/badges_title"
        android:textSize="24sp"
        android:padding="20dp"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <ImageView
            android:id = "@+id/pinned_badge1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_not_found"
            android:contentDescription = "@string/pinned_badge1"
            android:layout_margin="10dp"/>

        <ImageView
            android:id = "@+id/pinned_badge2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image_not_found"
            android:contentDescription = "@string/pinned_badge2"
            android:layout_margin="10dp"/>

        <ImageView
            android:id = "@+id/pinned_badge3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image_not_found"
            android:contentDescription = "@string/pinned_badge3"
            android:layout_margin="10dp"/>

    </LinearLayout>

    <TextView
        android:id = "@+id/rewards_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/rewards_title"
        android:textSize="24sp"
        android:padding="20dp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id = "@+id/pinned_reward1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/image_not_found"
            android:contentDescription = "@string/pinned_badge1"
            android:layout_margin="10dp"/>

        <ImageView
            android:id = "@+id/pinned_reward2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image_not_found"
            android:contentDescription = "@string/pinned_badge2"
            android:layout_margin="10dp"/>

        <ImageView
            android:id = "@+id/pinned_reward3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/image_not_found"
            android:contentDescription = "@string/pinned_badge3"
            android:layout_margin="10dp"/>

    </LinearLayout>


    <TextView
        android:id = "@+id/streaks_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/streaks_title"
        android:textSize="24sp"
        android:padding="20dp"/>


</LinearLayout>